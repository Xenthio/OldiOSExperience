@page "/lockscreen"
@using OldiOSExperience.Services
@implements IDisposable
@inject IJSRuntime JSRuntime

@* iOS 5 Lock Screen *@

<div class="lock-screen @(isUnlocking ? "unlocking" : "") @(isVisible ? "visible" : "")"
     @ontouchstart="HandleTouchStart"
     @ontouchmove="HandleTouchMove"
     @ontouchend="HandleTouchEnd"
     @onmousedown="HandleMouseDown"
     @onmousemove="HandleMouseMove"
     @onmouseup="HandleMouseUp"
     @onmouseleave="HandleMouseUp">
    
    <!-- Lock screen wallpaper -->
    <div class="lock-wallpaper" alt="Wallpaper"/>

    <!-- Status bar at top -->
    <OldiOSExperience.System.StatusBar Style="OldiOSExperience.System.StatusBarStyle.WhiteOnBlackEtch" />
    
    <!-- Large time and date display in center -->
    <div class="lock-status-bar">
        <div class="status-time">@currentTime</div>
        <div class="status-date">@currentDate</div>
    </div>
    
    <!-- Slide to unlock -->
    <div class="slide-to-unlock-container">
        <div @ref="slideTrackElement" class="slide-track">
            <div class="slide-text" style="@slideTextStyle">
                slide to unlock
            </div>
            <div @ref="slideButtonElement" class="slide-button" style="@slideButtonStyle">
                <div class="slide-arrow"></div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsLocked { get; set; } = true;
    
    [Parameter]
    public EventCallback OnUnlocked { get; set; }
    
    private bool isVisible = true;
    private bool isUnlocking = false;
    private string currentTime = "";
    private string currentDate = "";
    
    // Touch/drag state
    private bool isDragging = false;
    private double touchStartX = 0;
    private double dragOffsetX = 0;
    private const double UnlockThreshold = 250; // Pixels to drag to unlock

    // --- NEW: Element references and dimension properties ---
    private ElementReference slideTrackElement;
    private ElementReference slideButtonElement;
    private double slideTrackContentWidth = 0;
    private double slideButtonWidth = 0;
    
    // --- UPDATED: Style properties to use new dimensions ---
    private string slideButtonStyle => $"transform: translateX({Math.Max(0, Math.Min(dragOffsetX, slideTrackContentWidth - (slideButtonWidth)))}px); transition: {(isDragging ? "none" : "transform 0.3s ease-out")};";
    private string slideTextStyle => $"opacity: {Math.Max(0, 1 - (dragOffsetX / 200))}; transition: {(isDragging ? "none" : "opacity 0.3s ease-out")};";
    
    private global::System.Threading.Timer? clockTimer;
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Get the real dimensions from the DOM after the first render
            var trackRect = await JSRuntime.InvokeAsync<DOMRect>("getElementRect", slideTrackElement);
            var buttonRect = await JSRuntime.InvokeAsync<DOMRect>("getElementRect", slideButtonElement);

            // The content width of the track is its total width minus its horizontal padding (8px on each side)
            slideTrackContentWidth = trackRect.width - 16; 
            slideButtonWidth = buttonRect.width;
        }
    }
    
    protected override void OnInitialized()
    {
        UpdateTime();
        isVisible = IsLocked;
        
        // Update time every second for real-time clock
        clockTimer = new global::System.Threading.Timer(_ => 
        {
            UpdateTime();
            InvokeAsync(StateHasChanged);
        }, null, TimeSpan.FromSeconds(1), TimeSpan.FromSeconds(1));
    }
    
    public void Dispose()
    {
        clockTimer?.Dispose();
    }
    
    protected override void OnParametersSet()
    {
        isVisible = IsLocked;
    }
    
    private void UpdateTime()
    {
        var now = DateTime.Now;
        currentTime = now.ToString("h:mm");
        currentDate = now.ToString("dddd, MMMM d");
    }
    
    // Touch handlers
    private void HandleTouchStart(TouchEventArgs e)
    {
        isDragging = true;
        touchStartX = e.Touches[0].ClientX;
        dragOffsetX = 0;
    }
    
    private void HandleTouchMove(TouchEventArgs e)
    {
        if (!isDragging) return;
        
        var currentX = e.Touches[0].ClientX;
        // Use the static property directly
        dragOffsetX = Math.Max(0, (currentX - touchStartX) / DisplaySettings.SCALEFACTOR);
    }
    
    private async Task HandleTouchEnd(TouchEventArgs e)
    {
        if (!isDragging) return;
        isDragging = false;
        
        if (dragOffsetX >= UnlockThreshold)
        {
            await PerformUnlock();
        }
        else
        {
            // Snap back
            dragOffsetX = 0;
        }
    }
    
    // Mouse handlers (for desktop testing)
    private bool isMouseDown = false;
    
    private void HandleMouseDown(MouseEventArgs e)
    {
        isMouseDown = true;
        isDragging = true;
        touchStartX = e.ClientX;
        dragOffsetX = 0;
    }
    
    private void HandleMouseMove(MouseEventArgs e)
    {
        if (!isMouseDown || !isDragging) return;
        
        var currentX = e.ClientX;
        // Use the static property directly
        dragOffsetX = Math.Max(0, (currentX - touchStartX) / DisplaySettings.SCALEFACTOR);
    }
    
    private async Task HandleMouseUp(MouseEventArgs e)
    {
        if (!isMouseDown) return;
        isMouseDown = false;
        isDragging = false;
        
        if (dragOffsetX >= UnlockThreshold)
        {
            await PerformUnlock();
        }
        else
        {
            // Snap back
            dragOffsetX = 0;
        }
    }
    
    private async Task PerformUnlock()
    {
        isUnlocking = true;
        StateHasChanged();
        
        // Wait for lock screen elements to slide out and wallpaper to fade (400ms)
        await Task.Delay(400);
        
        // Now trigger springboard unlock animation (icons fly in)
        await OnUnlocked.InvokeAsync();
        
        // Wait for springboard animation to complete (400ms)
        await Task.Delay(400);
        
        // Hide lock screen after all animations complete
        isVisible = false;
        StateHasChanged();
        
        // Reset state
        isUnlocking = false;
        dragOffsetX = 0;
    }
    
    // --- NEW: Helper class for JS Interop ---
    public class DOMRect
    {
        public double width { get; set; }
        public double height { get; set; }
        // Add other properties like top, left if needed
    }
}
