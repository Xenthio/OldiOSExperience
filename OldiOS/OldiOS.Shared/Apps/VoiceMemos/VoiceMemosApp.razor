@* iOS 5 Voice Memos App *@
@using OldiOS.Shared.Apps.UIKit

<div class="voicememos-app">
    <UINavigationBar Title="Voice Memos" 
                     RightButtonText="Edit" />
    
    <div class="voicememos-content">
        <div class="recording-controls">
            <div class="record-display">
                <div class="timer-display">00:00</div>
                <div class="waveform-placeholder">
                    <img src="_content/OldiOS.Shared/images/icons/waveform-placeholder.png" alt="Waveform" style="width: 100%; opacity: 0.3;" />
                </div>
            </div>
            <div class="record-button-container">
                <button class="record-button">
                    <div class="record-dot"></div>
                </button>
            </div>
        </div>
        
        <div class="memos-list">
            <div class="empty-state">
                <div class="empty-icon"><img src="_content/OldiOS.Shared/images/icons/microphone-icon.png" alt="Microphone" style="width: 80px; height: 80px; opacity: 0.3;" /></div>
                <div class="empty-text">No Voice Memos</div>
                <div class="empty-hint">Tap the button to record</div>
            </div>
        </div>
    </div>
</div>

